<!DOCTYPE html>
<html lang="en">
<head>
    <%- include partials/top-site.ejs %>

</head><!--/head-->
<body>
    <%- include partials/header.ejs %>
    
    <section id="title" class="emerald">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1><%= __('Teams') %></h1>
                    <!-- <p>Pellentesque habitant morbi tristique senectus et netus et malesuada</p> -->
                </div>
                <div class="col-sm-6">
                    <ul class="breadcrumb pull-right">
                        <li><a href="/">Home</a></li>
                        <li><%= __('Teams') %></li>
                        <li class="active"><%= __('Edit') %></li>
                    </ul>
                </div>
            </div>
        </div>
    </section><!--/#title-->     

    <section id="registration" class="container">
        <div class="container">
            <%- include partials/alert.ejs %>
            <form id="form_time" role="form" data-toggle="validator">
            <div class="row">
                <form id="form_times" enctype="multipart/form-data">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="alias" class="control-label"><%= __('Alias') %></label>
                        <input disabled="disabled" type="text" class="form-control" id="alias" data-minlength="3" data-maxlength="20" value="<% if(teams[0].alias != null){ %><%= teams[0].alias %><% } %>"  name="alias" placeholder="" data-error="<%= __('Please, fill the form with a valid alias') %>" >
                        <div class="help-block with-errors"></div>
                    </div>
                </div> 
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="name" class="control-label"><%= __('Name') %></label>
                        <input disabled="disabled" type="text" class="form-control" id="name" data-minlength="3" data-maxlength="20" value="<% if(teams[0].name != null){ %><%= teams[0].name %><% } %>"  name="name" placeholder="" data-error="<%= __('Please, fill the form with a valid name') %>" >
                        <div class="help-block with-errors"></div>
                    </div>
                </div> 
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="logo" class="control-label"><%= __('Logo') %></label>
                        <input type="file" name="logo" />
                        <div class="help-block with-errors"></div>
                    </div>
                </div> 
            </div>
            <div class="row">    
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="looking_games" class="control-label"><%= __('Looking for games') %></label>
                        <select name="looking_games" id="looking_teams" class="form-control" > 
                            <% if(teams[0].looking_games === 0){ %>
                            <option value="0"><%= __('No') %></option>
                            <option value="1"><%= __('Yes') %></option>
                            <% }else{ %>
                            <option value="1"><%= __('Yes') %></option>
                            <option value="0"><%= __('No') %></option>
                            <% } %>
                        </select>
                    </div>
                </div>  
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="open_for_new_players" class="control-label"><%= __('Open for new players') %> </label>
                        <select name="open_for_new_players" id="open_for_new_players" class="form-control" > 
                            <% if(teams[0].open_for_new_players === 0){ %>
                            <option value="0"><%= __('No') %></option>
                            <option value="1"><%= __('Yes') %></option>
                            <% }else{ %>
                            <option value="1"><%= __('Yes') %></option>
                            <option value="0"><%= __('No') %></option>
                            <% } %>
                        </select>
                    </div>
                </div> 
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="other_grounds" class="control-label"><%= __('Accept games in other grounds') %></label>
                        <select name="other_grounds" id="other_grounds" class="form-control" > 
                            <% if(teams[0].other_grounds === 0){ %>
                            <option value="0"><%= __('No') %></option>
                            <option value="1"><%= __('Yes') %></option>
                            <% }else{ %>
                            <option value="1"><%= __('Yes') %></option>
                            <option value="0"><%= __('No') %></option>
                            <% } %>
                        </select>
                    </div>
                </div> 
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="other_categories" class="control-label"><%= __('Accept games in other categoreis') %></label>
                        <select name="other_categories" id="other_categories" class="form-control" > 
                            <% if(teams[0].other_categories === 0){ %>
                            <option value="0"><%= __('No') %></option>
                            <option value="1"><%= __('Yes') %></option>
                            <% }else{ %>
                            <option value="1"><%= __('Yes') %></option>
                            <option value="0"><%= __('No') %></option>
                            <% } %>
                        </select>
                    </div>
                </div> 

                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="have_place" class="control-label"><%= __('Have place') %></label>
                        <select name="have_place" id="have_place" class="form-control" > 
                            <% if(teams[0].have_place === 0){ %>
                            <option value="0"><%= __('No') %></option>
                            <option value="1"><%= __('Yes') %></option>
                            <% }else{ %>
                            <option value="1"><%= __('Yes') %></option>
                            <option value="0"><%= __('No') %></option>
                            <% } %>
                        </select>
                    </div>
                </div>
                
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="gender" class="control-label"><%= __('gender') %></label>
                        <select name="gender" id="gender" class="form-control" required > 
                            <% if(teams[0].gender >= 0){ %>
                            <option value="<%= user.gender %>"><%= user.genders_name %></option>
                            <% } %>  
                        </select>
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="country" class="control-label"><%= __('country') %></label>
                        <select name="country" id="country" class="form-control"  >
                            <% if(teams[0].country_name && teams[0].country_name.length >= 0){ %>
                            <option value="<%= teams[0].country_id %>"><%= teams[0].country_name%></option>
                            <% } %>
                        </select>
                    </div>
                </div> 
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="state" class="control-label"><%= __('state') %></label>
                        <select name="state" id="state" class="form-control" >
                            <% if(teams[0].state_name && teams[0].state_name.length >= 0){ %>
                            <option value="<%= teams[0].state_id %>"><%= teams[0].state_name %></option>
                            <% } %>
                        </select>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="city" class="control-label"><%= __('city') %></label>
                        <select name="city_id" id="city" class="form-control"  >
                            <% if(teams[0].city_name && teams[0].city_name.length >= 0){ %>
                            <option value="<%= teams[0].city_id %>"><%= teams[0].city_name %></option>
                            <% } %>
                        </select>
                    </div>
                </div>   
                <div class="col-sm-5">
                    <div class="form-group">
                        <label for="address" class="control-label"><%= __('address') %></label>
                        <input type="text" class="form-control" id="address" name="address" placeholder="" data-error="<%= __('Please, fill the form with a valid address') %>" value="<%= teams[0].address %>">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>  
            </div>

            <div class="row">
                <div class="panel-group col-sm-12" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <%= __('Calendar') %>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <div class="row">   
                                    <div class="col-sm-3">
                                        <select name="" id="we_play" class="form-control" > 
                                            <option value="w"><%= __('Weekly') %></option>
                                            <option value="b"><%= __('Biweekly') %></option>
                                            <option value="m"><%= __('Monthly') %></option>
                                            <option value="s"><%= __('Seasonal') %></option>
                                        </select>
                                    </div>
                                    <div class="col-sm-5" id="calendar-days">
                                        <input type="hidden" name="days" id="days" />
                                        <% if(teams[0].d1 !== null){ 
                                            var d1 = teams[0].d1.split('|'); %>
                                        <div class="row" id="d1" data-rel='{"start":"<%= d1[0] %>","duration":"<%= d1[1] %>","day":"d1"}'>
                                        <% }else{ %>    
                                        <div class="row" id="d1" data-rel="">
                                        <% } %>
                                            <div class="col-sm-3 text-right"><%= __('Sunday') %>, </div>
                                            <div class="col-sm-3"><select class="form-control start-hour"></select></div>    
                                            <div class="col-sm-2"><%= __('Duration') %></div>
                                            <div class="col-sm-3"><select class="form-control end-hour"></select></div>
                                        </div>
                                        <% if(teams[0].d2 !== null){ 
                                            var d2 = teams[0].d2.split('|'); %>
                                        <div class="row" id="d2" data-rel='{"start":"<%= d2[0] %>","duration":"<%= d2[1] %>","day":"d2"}'>
                                        <% }else{ %>    
                                        <div class="row" id="d2" data-rel="">
                                        <% } %>
                                            <div class="col-sm-3 text-right"><%= __('Monday') %>, </div>
                                            <div class="col-sm-3"><select class="form-control start-hour"></select></div>    
                                            <div class="col-sm-2"><%= __('Duration') %></div>
                                            <div class="col-sm-3"><select class="form-control end-hour"></select></div>
                                        </div>
                                        <% if(teams[0].d3 !== null){ 
                                            var d3 = teams[0].d3.split('|'); %>
                                        <div class="row" id="d3" data-rel='{"start":"<%= d3[0] %>","duration":"<%= d3[1] %>","day":"d3"}'>
                                        <% }else{ %>    
                                        <div class="row" id="d3" data-rel="">
                                        <% } %>
                                            <div class="col-sm-3 text-right"><%= __('Tuesday') %>, </div>
                                            <div class="col-sm-3"><select class="form-control start-hour"></select></div>    
                                            <div class="col-sm-2"><%= __('Duration') %></div>
                                            <div class="col-sm-3"><select class="form-control end-hour"></select></div>
                                        </div>
                                        <% if(teams[0].d4 !== null){ 
                                            var d4 = teams[0].d4.split('|'); %>
                                        <div class="row" id="d4" data-rel='{"start":"<%= d4[0] %>","duration":"<%= d4[1] %>","day":"d4"}'>
                                        <% }else{ %>    
                                        <div class="row" id="d4" data-rel="">
                                        <% } %>
                                            <div class="col-sm-3 text-right"><%= __('Wednesday') %>, </div>
                                            <div class="col-sm-3"><select class="form-control start-hour"></select></div>    
                                            <div class="col-sm-2"><%= __('Duration') %></div>
                                            <div class="col-sm-3"><select class="form-control end-hour"></select></div>
                                        </div>
                                        <% if(teams[0].d5 !== null){ 
                                            var d5 = teams[0].d5.split('|'); %>
                                        <div class="row" id="d5" data-rel='{"start":"<%= d5[0] %>","duration":"<%= d5[1] %>","day":"d5"}'>
                                        <% }else{ %>    
                                        <div class="row" id="d5" data-rel="">
                                        <% } %>
                                            <div class="col-sm-3 text-right"><%= __('Thursday') %>, </div>
                                            <div class="col-sm-3"><select class="form-control start-hour"></select></div>    
                                            <div class="col-sm-2"><%= __('Duration') %></div>
                                            <div class="col-sm-3"><select class="form-control end-hour"></select></div>
                                        </div>
                                        <% if(teams[0].d6 !== null){ 
                                            var d6 = teams[0].d6.split('|'); %>
                                        <div class="row" id="d6" data-rel='{"start":"<%= d6[0] %>","duration":"<%= d6[1] %>","day":"d6"}'>
                                        <% }else{ %>    
                                        <div class="row" id="d6" data-rel="">
                                        <% } %>
                                            <div class="col-sm-3 text-right"><%= __('Friday') %>, </div>
                                            <div class="col-sm-3"><select class="form-control start-hour"></select></div>    
                                            <div class="col-sm-2"><%= __('Duration') %></div>
                                            <div class="col-sm-3"><select class="form-control end-hour"></select></div>
                                        </div>
                                        <% if(teams[0].d7 !== null){ 
                                            var d7 = teams[0].d7.split('|'); %>
                                        <div class="row" id="d7" data-rel='{"start":"<%= d7[0] %>","duration":"<%= d7[1] %>","day":"d7"}'>
                                        <% }else{ %>    
                                        <div class="row" id="d7" data-rel="">
                                        <% } %>
                                            <div class="col-sm-3 text-right"><%= __('Saturday') %>, </div>
                                            <div class="col-sm-3"><select class="form-control start-hour"></select></div>    
                                            <div class="col-sm-2"><%= __('Duration') %></div>
                                            <div class="col-sm-3"><select class="form-control end-hour"></select></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="panel-group col-sm-12" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <%= __('My Place') %>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <div class="row">   
                                    <div class="col-sm-12">
                                        <% if(teams[0].preferred_place !== null && teams[0].place !== null){ %>
                                           <%= teams[0].place %> 
                                           <div class="btn-group  pull-right" role="group" aria-label=""> 
                                                <button type="button" class="btn btn-primary places" data-toggle="modal" data-target="#places"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></button>
                                                <button type="button" class="btn btn-danger places-remove" ><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                                           </div>
                                        <% }else{ %>    
                                                <button type="button" class="btn btn-primary places" data-toggle="modal" data-target="#places"><%= __('Add Place') %></button>
                                        <% } %>   
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="panel-group col-sm-12" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <%= __('Players') %>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                <div class="row">   
                                    <div class="col-sm-12 tools-table">
                                        <button type="button" class="btn btn-primary invite" data-toggle="modal" data-target="#invite">
                                            <%= __('Invite to team') %>
                                        </button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <table id="tablePlayers" cellspacing="0" width="100%">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th><%= __('Name') %></th>
                                                <th><%= __('Last Name') %></th>
                                                <th><%= __('City') %></th>
                                                <th><%= __('State') %></th>
                                                <th><%= __('Country') %></th>
                                                <th><%= __('Position') %></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                    </table>
                                    </div> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <button type="button" class="btn btn-primary btn-lg"><%= __('Cancel') %></button>
                        <button type="submit" class="btn btn-warning btn-lg"><%= __('Update') %></button>
                    </div>
                </div> 
            </div>  
            </form> 

        </div>
        <div id="invite" class="modal fade" role="dialog" >
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"><%= __('Invite') %></h4>
                    </div>
                    <form id="form_evento">
                        <div class="modal-body">
                            <div style="overflow:hidden;">
                                <table id="tablePlayersInvite" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th><%= __('Name') %></th>
                                            <th><%= __('Last Name') %></th>
                                            <th><%= __('City') %></th>
                                            <th><%= __('State') %></th>
                                            <th><%= __('Country') %></th>
                                            <th><%= __('Position') %></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><%= __('Cancel') %></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div id="places" class="modal fade" role="dialog" >
                <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"><%= __('Places') %></h4>
                    </div>
                    <form id="form_evento">
                        <div class="modal-body">
                            <div style="overflow:hidden;">
                                <table id="tablePlaces" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th><%= __('Name') %></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><%= __('Cancel') %></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


    </section><!--/#registration-->   

    <%- include partials/footer.ejs %>
    <script src="/js/util.js"></script>
    <script src="/js/validator.js"></script>
    <script src="/js/view/time.js"></script>

</body>
</html>