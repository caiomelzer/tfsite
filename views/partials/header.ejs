                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <%= __('Players') %> <i class="icon-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu">
                        <% if(user.is_player === 1){ %>
                            <li><a href="/jogadores/editar"><%= __('My Data') %></a></li>
                        <% } %> 
                        
