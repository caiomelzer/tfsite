<!DOCTYPE html>
<html lang="en">
<head>
    <%- include partials/top-site.ejs %>

</head><!--/head-->
<body>
    <%- include partials/header.ejs %>
    <section id="title" class="emerald">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1><%= __('Players') %></h1>
                    <!-- <p>Pellentesque habitant morbi tristique senectus et netus et malesuada</p> -->
                </div>
                <div class="col-sm-6">
                    <ul class="breadcrumb pull-right">
                        <li><a href="/">Home</a></li>
                        <li><%= __('Players') %></li>
                        <li class="active"><%= __('Search') %></li>
                    </ul>
                </div>
            </div>
        </div>
    </section><!--/#title-->     

    <section id="registration" class="container">
        <div class="container">
            <%- include partials/alert.ejs %>
            <form id="form_jogadores_buscar" role="form" data-toggle="validator">
            <div class="row form_buscar"> 
                <div class="col-sm-3">
                    <div class="form-group">
                        <label for="name" class="control-label"><%= __('Alias') %></label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>    
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="ground" class="control-label"><%= __('Ground') %></label>
                        <select name="ground" id="ground" class="form-control" > 
                              
                        </select>
                    </div>
                </div> 
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="position" class="control-label"><%= __('Position') %></label>
                        <select name="position" id="position" class="form-control" ></select>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="min_age" class="control-label"><%= __('Min Age') %></label>
                        <select name="min_age" id="min_age" class="form-control" ></select>

                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="max_age" class="control-label"><%= __('Max Age') %></label>
                        <select name="max_age" id="max_age" class="form-control" ></select>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group">
                        <label for="reset" class="control-label reset"><%= __('Reset') %></label>
                        <button type="submit" class="btn btn-warning"><%= __('Filter') %></button>
                    </div>
                </div>
            </div>
            </form> 
            <div class="row" id="list_jogadores"></div>
		</div>
    </section><!--/#registration-->   

    <%- include partials/footer.ejs %>
    <script src="/js/util.js"></script>
    <script src="/js/validator.js"></script>
    <script src="/js/view/jogadores.js"></script>

</body>
</html>