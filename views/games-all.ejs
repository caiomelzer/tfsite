<!DOCTYPE html>
<html lang="en">
<head>
    <%- include partials/top-site.ejs %>
    
</head><!--/head-->
<body>
    <%- include partials/header.ejs %>
    
    <section id="title" class="emerald">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <h1><%= __('Next Games') %></h1>
                    <!-- <p>Pellentesque habitant morbi tristique senectus et netus et malesuada</p> -->
                </div>
                <div class="col-sm-6">
                    <ul class="breadcrumb pull-right">
                        <li><a href="/">Home</a></li>
                        <li><%= __('Games') %></li>
                        <li class="active"><%= __('Next Games') %></li>
                    </ul>
                </div>
            </div>
        </div>
    </section><!--/#title-->     

    <section id="registration" class="container">
        <div class="container">
            <%- include partials/alert.ejs %>

            <form id="form_jogos_buscar" role="form" data-toggle="validator">
            <div class="row form_buscar"> 
                <div class="col-sm-5">
                    <div class="form-group">
                        <label for="alias" class="control-label"><%= __('Alias') %></label>
                        <input type="text" class="form-control" id="alias" name="alias" placeholder="">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>    
                <div class="col-sm-2">
                    <div class="form-group">
                        <label for="ground" class="control-label"><%= __('Ground') %></label>
                        <select name="ground" id="ground" class="form-control" > 
                              
                        </select>
                    </div>
                </div> 
                <div class="col-sm-4">
                    <div class="form-group">
                        <label for="category" class="control-label"><%= __('Category') %></label>
                        <select name="category" id="category" class="form-control" ></select>
                    </div>
                </div>
                <div class="col-sm-1">
                    <div class="form-group">
                        <label for="reset" class="control-label reset"><%= __('Reset') %></label>
                        <button type="submit" class="btn btn-warning"><%= __('Filter') %></button>
                    </div>
                </div>
            </div>
            </form> 
            <div class="row">
                <ul class="games-list col-sm-12">
                <% if(games && games.length > 0){ %>
                    <% for(var i=0;i<games.length;i++){ %>
                    <li class="col-sm-3 games-item" data-id="<%= games[i].game_id %>">
                        <div class="row">
                            <span class="team col-sm-5">
                                <%= games[i].alias_a %>
                                <img src="/images/uploads/<%= games[i].logo_a %>" />
                            </span>
                            <span class="versus col-sm-2">VS</span>
                            <span class="team col-sm-5">
                                <%= games[i].alias_b%>
                                <img src="/images/uploads/<%= games[i].logo_b %>" />
                            </span>
                        </div>  
                        <div class="row">  
                            <span class="place col-sm-12">
                                <p><%= games[i].name %></p>
                            </span>
                        </div>
                        <div class="row"> 
                        <div datetime="<%= games[i].date %>" class="col-sm-12 time">
                            <div class="row">
                                <div class="col-sm-5"> 
                                    <span class="date"></span> 
                                    <span class="hour"></span>
                                </div>
                                <div class="col-sm-7"> 
                                    <div class="result">
                                    <%= games[i].goals %> - <%= games[i].goals_against %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </div>
                    </li>
                    <% } %>
                <% } else { %>
                    <p><%= __('No games to show') %></p>
                <% } %>    
                </ul>
            </div>
        </div>
    </section><!--/#registration-->   
    <%- include partials/footer.ejs %>
    <script src="/js/util.js"></script>
    <script src="/js/validator.js"></script>
    <script src="/js/view/jogos.js"></script>
    <script src="/js/view/jogos-buscar.js"></script>

</body>
</html>

